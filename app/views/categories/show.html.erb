<div class="category-container">
  <div class="category-container-item">
    <% if @category.articles.first != nil %>
    <div class="category-container-item-img" style="background-image: url(<%= rails_blob_url(@category.articles.first.image) %>)"></div>
    <div class="category-container-item-content">
      <h3><%= link_to "#{@category.articles.first.title}", article_path(@category.articles.first.id) %></h3>
      <p><%= link_to "#{@category.articles.first.text.truncate(450, separator: ' ')}", article_path(@category.articles.first.id) %></p>
