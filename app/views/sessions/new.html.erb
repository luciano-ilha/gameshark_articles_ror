<% if logged_in? %>
  <h1>You already Logged as: <%= current_user.username %></h1>
<% else %>
  <h1>Login</h1>
  <%= form_tag '/login' do %>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Login" %>
  <% end %>
<% end %>
<br>

<%= link_to "Home", root_path %>
