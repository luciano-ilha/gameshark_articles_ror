<div class="login-container">
  <div class="login-container-form">
    <h1>Login</h1>
    <%= form_with model:@user, method: 'post' do |f| %>
      <span><%= label(:user, :username) %></span>
      <span class="login-container-form-field"><%= f.text_field :username %></span>
      <span><%= label(:user, :password) %></span>
      <span class="login-container-form-field"><%= f.password_field :password %></span>
      <span><%= f.submit "Login" %></span>
    <% end %>
  </div>
</div>